{
  "compilerOptions": {
    "target": "es2016",                                  
    "module": "ES2022",                                
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true,                                
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "moduleResolution": "Node"
  },
  "ts-node": {
    "esm": true  
  }
}